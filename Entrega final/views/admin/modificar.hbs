<div>
    <h2>Modificar tareas</h2>
    <form action="/admin/cursos/modificar" method="post">
<input type="hidden" value="{{curso.id}}" name="id">
        <textarea class="form-control" type="text" placeholder="Curso" name="curso"
                >{{curso.curso}}</textarea>

        </div>
        <div class="modificar-unidad">
            <textarea class="form-control" type="text" placeholder="Unidad" name="unidad"
               >{{curso.unidad}}</textarea>

        </div>
        <div class="modificar-tarea">
            <textarea class="form-control" type="text" placeholder="Tarea" name="tarea"
                >{{curso.tarea}}</textarea>

        </div>
        <div class="modificar-calificacion">
            <textarea class="form-control" type="text" placeholder="Calificacion" name="calificacion"
               >{{curso.calificacion}}</textarea>
        <button class="btn btn-primary" type="submit">Modificar</button>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
</div>